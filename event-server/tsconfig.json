{
  "compilerOptions": {
    "target": "es6",
    "outDir": "./dist/",
    "lib": ["esnext", "dom"],
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "incremental": true,
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "__tests__"]
}
