{
  "compilerOptions": {
    "target": "es6",
    "outDir": "dist",
    "lib": ["esnext"],
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "declaration": true
  },
  "include": ["src/**/*.ts", "schemas/**/*.json"],
  "exclude": [
    "dist/**/*",
    "node_modules",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
