{
  "name": "@blert/blertbank",
  "version": "0.1.0",
  "description": "Blertcoin mint and management system",
  "license": "MIT",
  "scripts": {
    "build": "tsc && tsc-alias",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check . --ignore-path ../.prettierignore",
    "format:fix": "prettier --write . --ignore-path ../.prettierignore",
    "start": "node ./dist/app.js",
    "dev": "NODE_ENV=development tsc-watch --noClear -p ./tsconfig.json --onSuccess \"sh -c 'tsc-alias && node ./dist/app.js'\"",
    "migration:create": "tsc && tsc-alias && node dist/migrations/migrate.js create $1",
    "migration:run": "tsc && tsc-alias && node dist/migrations/migrate.js",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@blert/common": "file:../common",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "postgres": "^3.4.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.5",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.5",
    "tsc-alias": "^1.8.16",
    "tsc-watch": "^6.0.4"
  }
}
