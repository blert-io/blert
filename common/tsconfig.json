{
  "compilerOptions": {
    "target": "es6",
    "outDir": "dist",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "incremental": true,
    "declaration": true
  },
  "include": ["**/*.ts", "generated/*_pb.js"],
  "exclude": [
    "dist/**/*",
    "node_modules",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
